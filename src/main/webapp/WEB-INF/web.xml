<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Phoneshop servlet api training</display-name>

    <servlet>
        <servlet-name>productList</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productList</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>productDetails</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductDetailsPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productDetails</servlet-name>
        <url-pattern>/products/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>com.es.phoneshop.web.CartPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCartItem</servlet-name>
        <servlet-class>com.es.phoneshop.web.DeleteCartItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCartItem</servlet-name>
        <url-pattern>/cart/deleteCartItem/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MiniCart</servlet-name>
        <servlet-class>com.es.phoneshop.web.MiniCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MiniCart</servlet-name>
        <url-pattern>/cart/minicart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>com.es.phoneshop.web.CheckoutPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Checkout</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderOverview</servlet-name>
        <servlet-class>com.es.phoneshop.web.OrderOverviewPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderOverview</servlet-name>
        <url-pattern>/orderOverview/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>Dos</filter-name>
        <filter-class>com.es.phoneshop.web.filters.DosFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Dos</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.es.phoneshop.web.ProductDemodataServletContextListener</listener-class>
    </listener>

    <error-page>
        <exception-type>
            com.es.phoneshop.model.product.ProductNotFoundException
        </exception-type>
        <location>
            /WEB-INF/pages/notFound.jsp
        </location>
    </error-page>
    <error-page>
        <exception-type>
            com.es.phoneshop.model.order.OrderNotFoundException
        </exception-type>
        <location>
            /WEB-INF/pages/notFound.jsp
        </location>
    </error-page>
    <error-page>
        <exception-type>
            java.lang.Throwable
        </exception-type>
        <location>
            /WEB-INF/pages/error.jsp
        </location>
    </error-page>
</web-app>
